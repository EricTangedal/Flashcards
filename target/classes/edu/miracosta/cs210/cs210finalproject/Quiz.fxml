<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.miracosta.cs210.cs210finalproject.QuizController">
    <children>
        <Button layoutX="537.0" layoutY="14.0" mnemonicParsing="false" onAction="#Home" text="Home" />
        <Label fx:id="quizLabel" alignment="CENTER" contentDisplay="CENTER" layoutX="220.0" layoutY="18.0" text="Quiz Time!" textAlignment="CENTER" AnchorPane.leftAnchor="140.0" AnchorPane.rightAnchor="140.0">
            <font>
                <Font name="Garamond" size="36.0" />
            </font>
        </Label>
      <VBox alignment="CENTER" layoutY="53.0" prefHeight="350.0" prefWidth="600.0" spacing="10.0">
         <children>
              <Label fx:id="questionLabel" alignment="CENTER" prefHeight="220.0" prefWidth="600.0" text="Description" textAlignment="CENTER" wrapText="true">
                  <font>
                      <Font name="Garamond" size="24.0" />
                  </font>
              </Label>
            <TextField fx:id="answerField" alignment="CENTER" prefHeight="25.0" prefWidth="560.0" promptText="Enter your answer here..." />
              <Button alignment="CENTER" mnemonicParsing="false" onAction="#checkAnswer" prefHeight="60.0" prefWidth="580.0" text="Submit" textAlignment="CENTER">
               <font>
                  <Font name="Garamond" size="16.0" />
               </font></Button>
         </children>
      </VBox>
      <Label fx:id="scoreLabel" layoutX="14.0" layoutY="18.0" text="Score: 0/2" textAlignment="CENTER">
         <font>
            <Font name="Garamond" size="24.0" />
         </font>
      </Label>
    </children>
</AnchorPane>
